@model CRM.ViewModels.TradeHistoryFilterModel

<form method="post">
    <div class="filter_panel container">

        <div class="filter_element">
            @Html.DropDownListFor(m => m.Coin, (IEnumerable<SelectListItem>)ViewBag.Coins, "Все валюты", new { @class = "form-control filter_input", name = "coin", id = "coin_selector" })
        </div>

        <div class="filter_element">
            @Html.DropDownListFor(m => m.Account, (IEnumerable<SelectListItem>)ViewBag.Accounts, "Все аккаунты", new { @class = "form-control filter_input", name = "accounts", id = "excange_selector" })
        </div>




        <div class="filter_element">
            <input type="datetime-local" style="width:180px !important" class="form-control filter_input_datetime" id="startDate" name="startDate" value=@Model.StartDate min="2019-04-05T00:00" />
        </div>

        <div class="filter_element">
            <input type="datetime-local" style="width:180px !important" class="form-control filter_input_datetime" id="endDate" name="endDate" value=@Model.EndDate min="2019-04-01T23:59" />
        </div>


        <div class="filter_element">
            <button type="submit" id="TradeHistory" class="btn filter_button btn-primary" formaction="../TradeHistory/TradeHistory" formmethod="post">
                Показать историю
            </button>
        </div>
    </div>

</form>

