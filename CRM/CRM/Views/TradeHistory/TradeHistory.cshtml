
@{
    Layout = "~/Views/Shared/TradeHistory/TradeHistoryLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TradeHistory</title>

    <link href="~/css/stylesheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
    <script src="~/js/datestocoockie.js"></script>

    <script src="~/js/sorttable.js"></script>

    <style type="text/css">
        table.sortable thead {
            background-color: #eee;
            color: #666666;
            font-weight: bold;
            cursor: default;
        }

        .date {
            display: none
        }
    </style>
</head>
<body>
    <div>
        <table class="sortable table table-bordered table-striped" style=" margin: auto; width:60%">
            <thead>
                <tr>

                    <td>Время</td>
                    <td>Тип</td>
                    <td>Пара</td>
                    <td>Цена</td>
                    <td>Количество</td>
                    <td>Количество</td>
                    <td>Комиссия</td>
                    <td>Баланс</td>
                    <td>Прибыль</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.AllOrders)
                {
                    //string side = item.IsBuyer == true ? "BUY" : "SELL";
                    //string dollarQuantity = "$" + (item.Price * item.Quantity).ToString("#.##");
                <tr>
                    <td>@item.Time.ToString("dd MMMM yyyy hh:mm:ss")</td>
                    <td>@item.Side</td>
                    <td>@item.Pair</td>
                    <td>@item.Price.ToString("#.##")</td>
                    <td>@item.Quantity</td>
                    <td>$@item.DollarQuantity.ToString("#.##")</td>
                    <td>@item.CommissionAsset @item.Commission</td>
                    <td>$@item.BalanceUSDT.ToString("#.##")</td>
                    <td>@item.Profit</td>
                </tr>
                }
            </tbody>
        </table>

        <script type="text/javascript">
            $(function () {
                var searchBUY = 'BUY';
                $("table tr td").filter(function () {
                    return $(this).text() == searchBUY;
                }).parent('tr').css('color', 'green');

                var searchSELL = 'SELL';
                $("table tr td").filter(function () {
                    return $(this).text() == searchSELL;
                }).parent('tr').css('color', 'red');
            });
        </script>
    </div>
</body>
</html>
