
@model CRM.ViewModels.Data.TradeHistoryViewModel

<form method="post">
    <div class="filter_panel container">

        <div class="filter_element">
            @Html.DropDownListFor(m => m.Coin, DropDownFields.GetCoins(), "Все валюты", new { @class = "form-control filter_input", name = "coin", id = "coin_selector" })
        </div>

        <div class="filter_element">
            @Html.DropDownListFor(m => m.OrderType, DropDownFields.GetOrderTypes(), "Все типы", new { @class = "form-control filter_input", name = "order", id = "order_selector" })
        </div>

        <div class="filter_element">
            @Html.DropDownListFor(m => m.Situation, DropDownFields.GetSituations(), "Все ситуации", new { @class = "form-control filter_input", name = "situation", id = "situation_selector" })
        </div>

        <div class="filter_element">
            <input type="date" class="form-control filter_input_date" id="startDate" name="startDate" value=@Model.StartDate min="2019-03-01" />
        </div>

        <div class="filter_element">
            <input type="date" class="form-control filter_input_date" id="endDate" name="endDate" value=@Model.EndDate min="2019-04-01" />
        </div>

        @Html.Partial("DataFilterPanelButtons")

    </div>


</form>