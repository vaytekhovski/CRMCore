@{
   
    ViewBag.Title = "Trade Delta";

}

@model CRM.ViewModels.Data.TradeDeltaViewModel
<!DOCTYPE html>

<html>
<head>

    <script src="~/js/sorttable.js"></script>

    <style type="text/css">
        @@media only screen and (max-width: 600px) {
            .table-font {
                table-layout: auto;
                font-size: 8px !important;
                text-align: center;
            }

                .table-font td, th {
                    padding: 1px !important;
                }

            .table_block {
                padding: 0 !important;
            }
        }
    </style>

</head>
<body>
    @Html.Partial("_TradeDeltaFilterPanel")
    <div class="content">
        <div style="text-align:center">
            <span>
                Суммарная дельта: @Model.SummDelta
            </span>
        </div>
        <div class="container table_block">
            <table class="sortable table table-bordered table-font">

                <thead>
                    <tr style="text-align:center">
                        <th class="sorttable_nosort">Валюта:</th>
                        <th class="sorttable_nosort">Время от:</th>
                        <th class="sorttable_nosort">Время до:</th>
                        <th class="sorttable_nosort">Дельта:</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var value in Model.Show)
                    {
                        <tr>
                            <td><p>@value.CurrencyName</p></td>
                            <td><p>@value.TimeFrom.DateTime.ToString("dd.MM.yy HH:mm")</p></td>
                            <td><p>@value.TimeTo.DateTime.ToString("dd.MM.yy HH:mm")</p></td>
                            <td><p>@value.Delta</p></td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.Partial("Pagination")
        </div>
    </div>
</body>
</html>
