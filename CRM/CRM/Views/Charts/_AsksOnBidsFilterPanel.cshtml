@model CRM.ViewModels.Charts.AskOnBidViewModel

<form action="/" method="post">

    <div class="filter_panel container">

        <div class="filter_element">
            <select class="form-control filter_input">
                <option value="binance">Binance</option>
            </select>
        </div>

        <div class="filter_element">
            @Html.DropDownListFor(m => m.Coin, CRM.Models.DropDownFields.GetCoins(), new { @class = "form-control filter_input", name = "coin", id = "coin_selector" })
        </div>


        <div class="filter_element">
            <input type="date" class="form-control filter_input" id="startDate" name="startDate" value="2019-04-05" min="2019-04-05" />
        </div>

        @{
            var currentDate = DateTime.Now;

            string dd = currentDate.Day < 10 ? "0" + currentDate.Day.ToString() : currentDate.Day.ToString();
            string mm = currentDate.Month < 10 ? "0" + currentDate.Month.ToString() : currentDate.Month.ToString();
            string yy = currentDate.Year.ToString();
            string curDate = yy + "-" + mm + "-" + dd;

        }

        <div class="filter_element">
            <input type="date" class="form-control filter_input" id="endDate" name="endDate" value=@curDate min="2019-04-01" />
        </div>

        <div class="filter_element">
            <button type="submit" id="TradeHistory" class="btn filter_button btn-primary" formaction="../Charts/AsksOnBids" formmethod="post">Asks на Bids</button>
            <button type="submit" id="TradeHistory" class="btn filter_button btn-primary" formaction="../Charts/DeltaOnTradeHistory" formmethod="post">Delta на Trade History</button>
        </div>


        <script type="text/javascript">
            $("#AsksOnBids").click(function () {
                setDataToCoockie()
            });

            $("#DeltaOnTradeHistory").click(function () {
                setDataToCoockie()
            });
        </script>
    </div>
</form>