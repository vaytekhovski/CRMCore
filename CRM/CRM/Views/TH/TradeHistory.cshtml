
@{
    Layout = "~/Views/Shared/TradeHistory/TradeHistoryLayout.cshtml";
    ViewBag.Title = "Trade History";
}
    @Html.Partial("_FilterPanel")
    <div class="profit profit_string">
        @{
            string profitStr = Model.Profit > 0 ? "+$" + Model.Profit.ToString("0.00") : "-$" + Model.Profit.ToString("0.00");
             }
        Прибыль: @profitStr
    </div>
    <div class="container table_block">
        <table class="sortable table table-bordered table-font">
            <thead>
                <tr>
                    <th id="time">Время</th>
                    <th class="sorttable_nosort">Аккаунт</th>
                    <th class="sorttable_nosort">Тип</th>
                    <th class="sorttable_nosort">Пара</th>
                    <th class="sorttable_nosort">Цена</th>
                    <th class="sorttable_nosort">Количество</th>
                    <th class="sorttable_nosort">Количество</th>
                    <th class="sorttable_nosort profit">Прибыль</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Orders)
                {
                    string profit = "";
                    if (item.Profit != 0)
                    {
                        profit = String.Format("{0:0.##}", item.Profit);
                    }
                    else
                    {
                        profit = null;
                    }
                    <tr>
                        <td>@item.Time.ToString("dd MM yyyy HH:mm:ss")</td>
                        <td>@item.Account</td>
                        <td>@item.Side</td>
                        <td>@item.Pair</td>
                        <td>$@String.Format("{0:0.##}", item.Price)</td>
                        <td>@item.Quantity</td>
                        <td>$@String.Format("{0:0.##}", item.DollarQuantity)</td>
                        <td class="profit">@profit</td>
                    </tr>
                }
            </tbody>
        </table>

        <script type="text/javascript">
            $(function () {
                var searchBUY = 'buy';
                $("table tr td").filter(function () {
                    return $(this).text() == searchBUY;
                }).parent('tr').css('backgroundColor', 'rgb(255, 255, 255)');

               

                var searchSELL = 'sell';
                $("table tr td").filter(function () {
                    return $(this).text() == searchSELL;
                }).parent('tr').css('backgroundColor', 'rgb(242, 244, 247)');

                $('td.profit').each(function () {
                    var fValue = parseFloat($(this).text());

                    if (!isNaN(fValue) && Math.sign(fValue) != -1) {
                        $(this).css('color', 'green');
                    }
                    else {
                        $(this).css('color', 'red');
                    }
                    
                });
            });

            $('document').ready(function () {
                    if (@Model.Profit > 0)
                        $('.profit_string').css('color', 'green');
                    else
                        $('.profit_string').css('color', 'red');
                });
        </script>
    </div>
