
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TradeHistoryLayout</title>

    <style type="text/css">
        .filter_element {
            display: inline-block;
            vertical-align: top;
            margin-right: 0px;
        }

        .filter_input {
            border: 2px solid #a76be3 !important;
            background-color: transparent;
            height:50px !important; 
        }

        .filter_button{
            height: 50px !important;
        }

        .filter_panel {
            display: flex;
            align-items: center;
            align-content: center;
            justify-content: center;
            width: 100%;
            padding-top:20px;
            padding-bottom:20px;
        }
    </style>

</head>
<body>
    <div>
        @Html.Partial("Navbar")
    </div>

    <form method="post">
        <div class="filter_panel">

            <div class="filter_element">
                <select class="form-control filter_input" name="coin" id="coin_selector">
                    @foreach (var item in CRM.Models.DropDownFields.Coins)
                    {
                        <option value="@item.Value">@item.Name</option>
                    }
                </select>
            </div>

            <div class="filter_element">
                <select class="form-control filter_input" name="accounts" id="excange_selector">
                    @foreach (var item in CRM.Models.DropDownFields.Accounts)
                    {
                        <option value="@item.Value">@item.Name</option>
                    }
                </select>
            </div>

            <div class="filter_element">
                <input type="date" class="form-control filter_input" id="startDate" name="startDate" min="2019-04-04" />
            </div>

            <div class="filter_element">
                <input type="date" class="form-control filter_input" id="endDate" name="endDate" min="2019-04-01" />
            </div>

            <div class="filter_element">
                <button type="submit" id="TradeHistory" class="btn filter_button" formaction="../TH/TradeHistory" formmethod="post">
                    История
                </button>
            </div>

        </div>
    </form>

    <script type="text/javascript">
        $("#TradeHistory").click(function () {
            setDataToCoockie()
        });
    </script>



    @RenderBody()
</body>
</html>
