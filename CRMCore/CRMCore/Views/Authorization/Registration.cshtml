
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>


    <link href="~/css/stylesheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</head>
<body class="authorization">
    <div class="parent"> 
        <form action="../Authorization/Registration" method="post">
            <div>
                <div class="title" style="text-align:center">
                    <h1>Регистрация</h1>
                </div>
                <div class="login">
                    <input type="text" class="form-control" placeholder="Логин" name="user_name" value="" />
                </div>
                <br />
                <div class="password">
                    <input type="password" class="form-control" placeholder="Пароль" name="user_password" value="" />
                </div><br />
                <div class="confirm_password">
                    <input type="password" class="form-control" placeholder="Подтверждение пароль" name="user_confirm_password" value="" />
                </div>
                <div>
                    <p>@ViewBag.status</p>
                </div>
                <div style="text-align:center">
                    <button class="btn btn-warning" type="submit" name="submit_button">Зарегестривароваться</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
